<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="4000">
       <KeyFrameSet></KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/img_taylor"
            motion:dragDirection="dragDown" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="415dp"
            android:layout_width="0dp"
            android:id="@+id/textView10"
            android:layout_marginEnd="20dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView3" />
        <Constraint
            android:id="@+id/tvSongSinger"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#FFFF" />
        </Constraint>
        <Constraint
            android:id="@+id/menu_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
        <Constraint
            android:layout_height="415dp"
            android:layout_width="0dp"
            android:id="@+id/lyrics"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="invisible"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="110dp" />
        <Constraint
            android:id="@+id/menu_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/background_img"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="142dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/img_taylor"
            android:layout_width="108dp"
            android:layout_height="118dp"
            android:visibility="visible"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            motion:layout_constraintTop_toTopOf="@+id/background_img"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/img_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView19"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/imageView19"
            motion:layout_constraintTop_toTopOf="@+id/background_img"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp" />
        <Constraint
            android:id="@+id/ic_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/loadMusic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/img_taylor"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            motion:layout_constraintBottom_toBottomOf="@+id/img_taylor" />
        <Constraint
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintStart_toStartOf="@+id/loadMusic"
            android:layout_marginStart="20dp"
            motion:layout_constraintBottom_toTopOf="@+id/loadMusic"
            android:layout_marginBottom="10dp" />
        <Constraint
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView17"
            android:layout_marginBottom="0dp"
            motion:layout_constraintStart_toEndOf="@+id/imageView17"
            android:layout_marginStart="10dp" />
        <Constraint
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintStart_toEndOf="@+id/imageView18"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView18"
            android:layout_marginStart="10dp" />
        <Constraint
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintStart_toEndOf="@+id/imageView20"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView20"
            android:layout_marginStart="10dp" />
        <Constraint
            android:id="@+id/textView8"
            motion:layout_constraintTop_toBottomOf="@+id/textView7"
            motion:layout_constraintStart_toStartOf="@+id/ic_menu"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="@+id/background_img"
            android:layout_width="377dp"
            android:layout_height="509dp" />
        <Constraint
            android:id="@+id/tvSongSinger"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue=" #0A2FF2" />
        </Constraint>
        <Constraint
            android:id="@+id/lyrics"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            motion:layout_constraintStart_toStartOf="@+id/imageView13"
            android:visibility="visible"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toBottomOf="@+id/tvSongSinger"
            motion:layout_constraintBottom_toTopOf="@+id/background_img" />
    </ConstraintSet>
</MotionScene>